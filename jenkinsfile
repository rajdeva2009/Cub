#! groovy

node {
  // Get the source code
 stage('checkout') {
    checkout([$class: 'GitSCM', branches: [[name: '*/dev']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/rajdeva2009/Cub.git']]])
  }
  
  // Build the code
 stage('build') {	 
      // Run the maven build
            sh '"$MVN_HOME/bin/mvn" -Dmaven.test.failure.ignore clean package'
   }
	
 // test the code
 stage('test') {
        junit 'target/surefire-reports/*.xml' 
                }

// upload to artifact
	stage('upload') {
	def uploadSpec = {
  "files": [ {
      "pattern": "*.jar",
      "target": "example-repo-local"
    }
 ]
}
server.upload(uploadSpec)
	
// deploy code
 stage('deploy') {
	 echo "deploy"
	}

}
  
