#! groovy

node('<nodelable>') {

  def jdkHome
  def mvnHome

  def gitShortCommitID = null
  
  // Prepare the build environment
  stage('Build Environment') {
    jdkHome = installTool "<jdk1.8.0_141>"
    mvnHome = installTool "<apache-maven-3.3.9>"
  }

  // Get the source code
  stage('Source') {
    git branch: '<develop/master', credentialsId: '<username>', url: '<http/gitpath/to/project>'
	  gitShortCommitID = gitCommitShortHash() 
    notifyStash()    // it will notify bitbucket or notifyBitbucket()
  }
